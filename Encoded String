Python

al=['a','b','c','d','e','f','g','h','i','j','k','l','m','n','o','p']
for _ in range(int(input())):
    w=""
    p=0
    n=int(input())
    A=input()
    for i in range(0,n//4):
        c=A[((4*i)+0):((4*i)+4)]
        p=int(c,2)
        w+=al[p]
    print(w)
C++

#include<iostream>
#include<bits/stdc++.h>
#include<algorithm>
using namespace std;
int count(string s)
{
    int ct=0;
    for (int i = 0; i < 4; i++)
    {
        if(s[i]=='1')
        {
            ct+=(1<<(3-i));
        }
    }
    return ct;
}
int main()
{
    int t;cin >>t;
    while(t--)
    {
        int n;cin >>n;
        string s1,s2;cin >>s1;
        for (int i = 0; i < n; i+=4)
        {
            string s3;s3+=s1[i];s3+=s1[i+1];s3+=s1[i+2];s3+=s1[i+3];
            int x=count(s3)+1;
            s2+=char(96+x);
        }
        cout<<s2<<endl;
    }
    return 0;
}
